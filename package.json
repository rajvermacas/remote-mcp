{
  "name": "mcp-calculator-server",
  "version": "1.0.0",
  "description": "Advanced MCP Calculator Server with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/stdio-server.js",
    "start:http": "node dist/server/http-server.js",
    "dev": "tsx watch src/server/stdio-server.ts",
    "dev:http": "tsx watch src/server/http-server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "inspector": "npx @modelcontextprotocol/inspector node dist/server/stdio-server.js"
  },
  "keywords": ["mcp", "model-context-protocol", "calculator", "typescript"],
  "author": "MCP Developer",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "zod": "^3.22.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.0.0"
  }
}